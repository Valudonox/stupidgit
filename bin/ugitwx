#!/usr/bin/env python
# -*- coding: utf-8

import sys
import os
import os.path
import wx

# Add module path .. if ../ugitwx exists
curfile = __file__
if os.path.islink(curfile):
    curfile = os.path.abspath(os.readlink(curfile))
curdir = os.path.dirname(curfile)
moduledir = os.path.abspath(os.path.join(curdir, '..', 'ugitwx'))
if os.path.isdir(moduledir):
    sys.path.insert(0, os.path.dirname(moduledir))

# Load ugitwx module
from ugitwx import *

# Parse arguments
repodir = sys.argv[1] if len(sys.argv) > 1 else os.getcwd()

# Show main window
try:
    repo = Repository(repodir)
except GitError:
    repo = None
app = wx.PySimpleApp()
win = MainWindow(None, -1, 'ugitwx', repo)
win.Show(True)
app.MainLoop()
